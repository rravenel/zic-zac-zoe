/* =============================================================================
   ZIC-ZAC-ZOE - Retro 80s Arcade Styling
   ============================================================================= */

/* Import retro pixel font */
@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');

/* CSS Variables */
:root {
  --color-bg: #000000;
  --color-primary: #00ffff;
  --color-title: #ff0000;
  --color-win: #00ff00;
  --color-lose: #ff0000;
  --color-text: #ffffff;
  --color-turn: #ffcc00;
  --color-dim: #444444;
  --color-dim-light: #666666;
  --color-cell-bg: #000044;
  --color-cell-border: #0088ff;
  --color-x: #00ffff;
  --color-o: #ffff00;
  --color-btn-green: #00cc00;
  --color-stats-bg: #00dddd;
  --color-stats-text: #000000;
  --color-mode-icon: #ff0000;

  --font-arcade: 'Press Start 2P', monospace;
}

/* Reset & Base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body {
  height: 100%;
  overflow: hidden;
}

body {
  background-color: var(--color-bg);
  color: var(--color-text);
  font-family: var(--font-arcade);
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 20px;
  min-height: 100%;
}

#app {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  padding: 10px;
  /* Dimensions set by JavaScript */
}

/* =============================================================================
   Header
   ============================================================================= */

.header {
  text-align: center;
}

.title {
  font-size: 32px;
  color: var(--color-title);
  letter-spacing: 3px;
  white-space: nowrap;
}

.subtitle {
  font-size: 10px;
  margin-top: 6px;
  letter-spacing: 1px;
  line-height: 1.6;
  white-space: nowrap;
}

.subtitle-lose {
  color: var(--color-lose);
}

.subtitle-win {
  color: var(--color-win);
}

/* =============================================================================
   Status Display
   ============================================================================= */

.status {
  font-size: 20px;
  min-height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 8px;
}

.status.your-turn {
  color: var(--color-turn);
}

.status.x-turn {
  color: var(--color-x);
}

.status.o-turn {
  color: var(--color-o);
}

.status.win {
  font-size: 32px;
  color: var(--color-win);
}

.status.lose {
  font-size: 32px;
  color: var(--color-lose);
}

.status.draw {
  font-size: 32px;
  color: #ff8800;
}

.status.x-wins {
  font-size: 32px;
  color: var(--color-x);
}

.status.o-wins {
  font-size: 32px;
  color: var(--color-o);
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

@keyframes winner {
  from { transform: scale(1); }
  to { transform: scale(1.05); }
}

/* =============================================================================
   Game Board
   ============================================================================= */

.board {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 0;
  width: 360px;
  height: 360px;
  justify-items: center;
  align-items: center;
}

.cell {
  width: 52px;
  height: 52px;
  background-color: var(--color-cell-bg);
  border: 3px solid var(--color-cell-border);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28px;
  line-height: 1;
  cursor: pointer;
  transition: all 0.15s ease;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.cell:hover:not(.occupied):not(.game-over) {
  border-color: var(--color-primary);
  background-color: #000066;
}

.cell:active:not(.occupied):not(.game-over) {
  transform: scale(0.95);
}

.cell.occupied {
  cursor: default;
}

.cell.game-over {
  cursor: default;
}

.cell .piece {
  font-weight: bold;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cell .piece.x {
  color: var(--color-x);
}

.cell .piece.o {
  color: var(--color-o);
}

/* Cell highlighting - placeholder for game state visuals (TBD) */
.cell.last-move {
  /* TBD */
}

.cell.win-highlight .piece {
  color: var(--color-win);
}

.cell.lose-highlight .piece {
  color: var(--color-lose);
}

/* =============================================================================
   Stats Boxes (below board)
   ============================================================================= */

.stats-row {
  display: flex;
  gap: 20px;
  justify-content: center;
  margin-top: 20px;
}

.stats-box {
  background-color: var(--color-stats-bg);
  color: var(--color-stats-text);
  padding: 10px 0;
  font-size: 14px;
  letter-spacing: 2px;
  width: 170px;
  height: 44px;
  text-align: center;
  border: 3px solid var(--color-stats-bg);
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.stats-box.blinking {
  animation: stats-blink 1s step-end infinite;
}

@keyframes stats-blink {
  0%, 50% {
    background-color: var(--color-stats-bg);
    color: var(--color-stats-text);
    border-color: var(--color-stats-bg);
  }
  50.01%, 100% {
    background-color: var(--color-bg);
    color: var(--color-stats-bg);
    border-color: var(--color-stats-bg);
  }
}

/* 2-player mode stats */
.stats-box.x-score {
  background-color: var(--color-x);
}

.stats-box.o-score {
  background-color: var(--color-o);
}

/* =============================================================================
   Controls
   ============================================================================= */

.controls {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  gap: 20px;
  margin-top: 10px;
}

.controls-left {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: space-between;
  width: 170px;
  height: 44px;
  gap: 6px;
  box-sizing: border-box;
}

.control-group {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  gap: 4px;
  flex: 1;
  min-width: 0;
  box-sizing: border-box;
  overflow: visible;
}

.control-label {
  font-size: 8px;
  color: var(--color-lose);
  letter-spacing: 0px;
  white-space: nowrap;
  text-align: center;
  overflow: visible;
}

/* Base button style */
.btn {
  font-family: var(--font-arcade);
  font-size: 12px;
  padding: 8px 12px;
  border: none;
  background-color: transparent;
  color: var(--color-text);
  cursor: pointer;
  transition: all 0.15s ease;
  -webkit-tap-highlight-color: transparent;
}

.btn:active {
  transform: scale(0.95);
}

/* MODE button - person icons on black */
.btn-mode {
  display: flex;
  gap: 4px;
  padding: 0;
  background-color: transparent;
  flex: 1;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.btn-mode .person-icon {
  font-size: 24px;
  color: var(--color-lose);
  transition: opacity 0.15s ease;
}

.btn-mode .person-icon.dim {
  opacity: 0.25;
}

/* PLAYS button - red outline */
.btn-plays {
  background-color: transparent;
  color: var(--color-lose);
  border: 2px solid var(--color-lose);
  padding: 0;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  min-width: 0;
}

.btn-plays:hover {
  filter: brightness(1.1);
}

/* DIFFICULTY button - red outline with stars */
.btn-difficulty {
  background-color: transparent;
  color: var(--color-lose);
  border: 2px solid var(--color-lose);
  padding: 0;
  font-size: 12px;
  letter-spacing: 0px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-difficulty:hover {
  filter: brightness(1.1);
}

.btn-difficulty {
  box-sizing: border-box;
  min-width: 0;
}

.btn-difficulty .star {
  transition: opacity 0.15s ease;
}

.btn-difficulty .star.dim {
  opacity: 0.25;
}

.btn-difficulty.disabled {
  opacity: 0.25;
  cursor: default;
  pointer-events: none;
}

.btn-plays.disabled {
  opacity: 0.25;
  cursor: default;
  pointer-events: none;
}

/* NEW GAME button - green */
.btn-new-game {
  background-color: var(--color-win);
  color: var(--color-stats-text);
  width: 170px;
  height: 44px;
  padding: 0;
  font-size: 14px;
  letter-spacing: 2px;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.btn-new-game:hover {
  filter: brightness(1.1);
}

/* =============================================================================
   Loading Overlay
   ============================================================================= */

.loading {
  position: fixed;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transition: opacity 0.3s ease;
}

.loading.hidden {
  opacity: 0;
  pointer-events: none;
}

.loading-text {
  font-size: 16px;
  color: var(--color-primary);
  animation: pulse 1s infinite;
}

